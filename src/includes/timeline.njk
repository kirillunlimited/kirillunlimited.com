<div class="timeline">
  {%- for element in collections.timeline | reverse -%}
    <div class="item">
      <div class="content">
        <h3 class="title">{{element.data.title}}</h3>
        <p class="description">{{element.templateContent | safe}}</p>
      </div>
      <div class="period">
        <time>{{element.data.from | monthAndYear}}</time> â€” <time>{{element.data.to | monthAndYear}}</time>
        <div>{{element.data.from | duration(element.data.to)}}</div>
      </div>
    </div>
  {%- endfor -%}
</div>