<header class="header">
  <a class="header__logo" href="/" {% if page.url == "/" %} aria-current="page"{% endif %} aria-label="home"></a>
  <nav class="header__nav">
    <ul class="header__list">
      {%- for element in collections.pages | sortByOrder -%}
        <li>
          <a href="{{element.url}}" {% if page.url == element.url %} aria-current="page"{% endif %}>
            {{ element.data.title }}
          </a>
        </li>
      {%- endfor -%}
    </ul>
  </nav>
</header>