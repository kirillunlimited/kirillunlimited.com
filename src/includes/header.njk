<header class="header">
  <div class="profile">
    <a
      href="/img/kirillunlimited.jpg"
      class="portrait"
      title="Фотография в исходном размере"
    >
      <img
        class="photo"
        src="/img/portrait.jpg"
        alt="Кирилл Иванов"
        width="256"
        height="256"
      />
    </a>
    <div>
      <h1>Кирилл Иванов</h1>
      <nav>
        {%- for element in collections.pages -%}
          <a href="/{{element.data.permalink | navLink}}" {% if page.url == element.url %} aria-current="page"{% endif %}>
            {{ element.data.title }}
          </a>
        {%- endfor -%}
      </nav>
    </div>
  </div>
</header>
