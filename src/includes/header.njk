<header class="header">
  <div class="profile">
    <a
      href="/assets/img/kirillunlimited.jpg"
      class="portrait"
      title="{{ portrait.title }}"
    >
      <img
        class="photo"
        src="/assets/img/portrait.jpg"
        alt="{{ portrait.alt }}"
        width="256"
        height="256"
      />
    </a>
    <div>
      <h1>{{ header.h1 }}</h1>
      <h2>{{ header.h2 }}</h2>
    </div>
  </div>
  <nav class="language">
    {%- for element in collections.pages -%}
      <a
        href="{{element.data.permalink | stripTrailingSlash}}"
        {% if page.url == element.url %} aria-current="page"{% endif %}>{{element.data.language}}</a>
      {% if not loop.last %} / {% endif %}
    {%- endfor -%}
  </nav>
</header>