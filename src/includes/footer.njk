<footer class="footer">
  <div class="copyright">
    <p>Made with <span class="footer__heart">â™¥</span> using <a href="https://www.11ty.dev" target="_blank" rel="noopener noreferrer">11ty</a></p>
    <p><a href="https://github.com/kirillunlimited/kirillunlimited.com" target="_blank" rel="noopener noreferrer">Source code</a></p>
  </div>
  <div class="footer__performance">
    {% if speedlify %} <a href="https://kirillunlimited-speedlify.netlify.app/kirillunlimited.com/#site-{{speedlify}}" target="_blank" rel="noopener noreferrer" class="footer__speedlify">
      <speedlify-score speedlify-url="https://kirillunlimited-speedlify.netlify.app" hash="{{speedlify}}">
    </a>{% endif %}
    <a class="footer__512kbLink" href="https://512kb.club" target="_blank" rel="noopener noreferrer">
      <img class="footer__512kbImage" src="https://512kb.club/assets/images/orange-team.svg" alt="a proud member of the orange team of 512KB club" />
    </a>
  </div>
  <fieldset class="scheme-select">
    <legend class="scheme-select__legend">Color scheme</legend>
    <div class="scheme-select__control">
      <input type="radio" id="radio-light-scheme" class="scheme-select__radio" name="scheme-select" value="light"/>
      <label class="scheme-select__radioLabel" for="radio-light-scheme">Light</label>
    </div>

    <div class="scheme-select__control">
      <input type="radio" id="radio-auto-scheme" class="scheme-select__radio" name="scheme-select" value="auto"/>
      <label class="scheme-select__radioLabel" for="radio-auto-scheme">Auto</label>
    </div>

    <div class="scheme-select__control">
      <input type="radio" id="radio-dark-scheme" class="scheme-select__radio" name="scheme-select" value="dark"/>
      <label class="scheme-select__radioLabel" for="radio-dark-scheme">Dark</label>
    </div>
  </fieldset>
</footer>