<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>{{ head.title if head.title else title }}</title>
    <meta name="description" content="{{head.description}}"/>
    <meta name="keywords" content="Kirill Ivanov, frontend, developer, engineer, javascript"/>
    <meta name="generator" content="Eleventy" >
    <link rel="alternate" type="application/atom+xml" title="RSS Feed for kirillunlimited.com" href="{{site.url}}/feed.xml" />

    {# Open Graph #}
    <meta property="og:title" content="{{ head.title if head.title else title }}"/>
    <meta property="og:description" content="{{ head.description }}"/>
    <meta property="og:type" content="website" />
    <meta property="og:image" content="{% ogImage site.apiScreenshotUrl, site.url, page.url, generated %}" />
    <meta property="og:url" content="{{ site.url }}{{ page.url }}" />

    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ site.url }}{{ page.url }}">
    <meta property="twitter:title" content="{{ head.title if head.title else title }}">
    <meta property="twitter:description" content="{{ head.description }}">
    <meta property="twitter:image" content="{% ogImage site.apiScreenshotUrl, site.url, page.url, generated %}">

    {# Article #}
    {%- set isPost = collections.posts | isPageInCollection(page.url) -%}
    {% if isPost %} <meta property="article:published_time" content={{ page.date | isoPostDate }}> {% endif %}

    {# Preload fonts #}
    <link rel="preload" href="{% webpack 'Rubik-Medium.woff2' %}" as="font" type="font/woff2" crossorigin>
    <link rel="preload" href="{% webpack 'Rubik-Light.woff2' %}" as="font" type="font/woff2" crossorigin>

    {# Styles #}
    <link rel="stylesheet" href="{% webpack 'light.css' %}" media="(prefers-color-scheme: light)" data-color-scheme="light"/>
    <link rel="stylesheet" href="{% webpack 'dark.css' %}" media="(prefers-color-scheme: dark)" data-color-scheme="dark"/>
    <link rel="stylesheet" href="{% webpack 'styles.css' %}" />

    {# Favicon #}
    <link rel="manifest" href="/manifest.webmanifest">
    <link rel="icon" href="/favicon.ico" sizes="any">
    <link rel="apple-touch-icon" href="{% image 'src/assets/img/avatar.jpg', 'png', [180] %}">

    {# Theme #}
    <meta name="color-scheme" content="light dark">
    <meta name="theme-color" media="(prefers-color-scheme: light)" content="#32d9ff" data-color-scheme="light" />
    <meta name="theme-color" media="(prefers-color-scheme: dark)" content="#4c49fd" data-color-scheme="dark" />

    <script src="{% webpack 'init.js' %}"></script>
  </head>
  <body>
    {% include 'header.njk' %}
    <main class="main">
      {{content | safe}}
    </main>
    {% include 'footer.njk' %}
    <script async src="{% webpack 'app.js' %}"></script>
    {% if script %}<script async src="{% webpack script %}"></script>{% endif %}
    <script data-goatcounter="https://kirillunlimitedcom.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
  </body>
</html>