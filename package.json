{
  "name": "kirillunlimited.ru",
  "version": "1.0.0",
  "scripts": {
    "clean": "npm-run-all --parallel clean:*",
    "clean:cache": "npx shx rm -rf ./.parcel-cache",
    "clean:dist": "npx shx rm -rf ./dist",
    "dev": "npm-run-all clean --parallel dev:*",
    "dev:assets": "APP_ENV=development webpack --mode production --watch",
    "dev:site": "APP_ENV=development eleventy --watch",
    "dev:firebase": "firebase emulators:start",
    "build": "npm-run-all clean build:*",
    "build:assets": "webpack --mode production",
    "build:site": "eleventy",
    "deploy": "npm-run-all build deploy:*",
    "deploy:firebase": "firebase deploy"
  },
  "author": "Kirill Ivanov",
  "devDependencies": {
    "@11ty/eleventy": "^0.12.1",
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "autoprefixer": "^10.4.0",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.1",
    "cssnano": "^5.0.12",
    "mini-css-extract-plugin": "^2.4.5",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.0.0",
    "postcss-loader": "^6.2.1",
    "prettier": "^2.3.1",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-manifest-plugin": "^4.0.2"
  },
  "dependencies": {
    "markdown-it": "^12.0.6",
    "markdown-it-attrs": "^4.0.0"
  }
}
